{
  "manifest_version": 3,
  "name": "Pakistani Local Language Translator",
  "version": "1.0",
  "description": "Translate text into Pakistani local languages using AI.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "storage"]
}
